    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cheshire Cat (docker)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/core",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Cheshire Cat (local Python)",
            "type": "debugpy",
            "request": "launch",
            "program": ".venv/bin/activate && uv run cat.main:main",
            "args": [
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            //"preLaunchTask": "uv sync"
        }
    ]
}